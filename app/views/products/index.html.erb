<h1>Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <% image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
        <a href="#"<h1><% product.name %></h1></a>
        <p><% product.description %></p>
        <strong><% product.price %></strong>
      </div><!--/col-->
    <% end %>
  </div>
</div>

