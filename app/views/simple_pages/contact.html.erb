

<header class="contact-head">
  <h1>Contact Us</h1>
</header>
<article class="ul-list">
  <div class="row">
    <ul class="contact-ul col-10 offset-1 col-md-8 offset-md-2 col-lg-4 offset-lg-2">
      <div class="address">
      </div>
      <div class="email">
      </div>
      <div class="ph-num">
      </div>
    </ul>
    <div class="col-10 offset-1 col-md-8 offset-md-2 col-lg-4 offset-lg-0">
      <%= flash[:notice] %>
      <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name", required: "true" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email", required: "true" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 6, required: "true" %>
      </div>
      <%= form.submit "Send", class: "form_label btn-style" %>
      <% end %>
    </div>
  </div><!-- end .row -->
  <div class="bottom-space"></div>
</article>
